{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base",
        "plugin:jest/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "jest"
    ],
    "rules": {
        "no-underscore-dangle": 0,
        "import/extensions": 0
    },
    "settings": {
        "import/resolver": {
            "node": {
                "extensions": [".js", ".ts", ".tsx", ".d.ts"]
            }
        }
    },
    "ignorePatterns": ["compiled/"]
}
